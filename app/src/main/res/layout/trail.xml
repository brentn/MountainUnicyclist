<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/card_background">


    <ScrollView

        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:background="@color/card_background"
        android:id="@+id/scroll_view"
        android:fillViewport="false">

        <!-- A CardView that contains a TextView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"
            android:elevation="1dp"
            android:background="@color/card_background">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/feature_photo"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginLeft="-25dp"
                android:layout_marginRight="-25dp"
                android:theme="@android:style/Theme.Translucent" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titlebar"
                android:background="@color/primary"
                android:layout_below="@+id/feature_photo"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/difficulty_icon"
                    android:padding="8dp"
                    android:src="@drawable/ic_easy"
                    android:layout_gravity="center_vertical|left"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/titletext"
                    android:gravity="left"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Title"
                        android:id="@+id/title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="approx. 30 km away"
                        android:id="@+id/distance"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:layout_alignBottom="@+id/feature_photo"
                android:background="@color/translucent"
                android:id="@+id/ratingbar"
                android:elevation="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/trailsystem"
                    android:layout_gravity="right|center_vertical"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/rating"
                    android:id="@+id/textView9"
                    android:layout_gravity="left|top"
                    android:textColor="@color/primary_text"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="★★★★☆☆☆☆"
                    android:id="@+id/rating"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/card"
                android:layout_below="@+id/titlebar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/description"
                    android:id="@+id/textView7"
                    android:textColor="@color/secondary_text"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/description"
                    android:minLines="1"
                    android:maxLines="5"
                    android:textColor="@color/primary_text"
                    android:padding="10dp" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:id="@+id/stats">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Rides: 14/102"
                        android:id="@+id/rides"
                        android:layout_gravity="left|top"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/photos"
                    android:id="@+id/textView5"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:id="@+id/photo_picker"
                    android:background="@color/translucent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/photos"
                        android:minHeight="96dp"
                        android:gravity="center_vertical|left">

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/directions"
                    android:id="@+id/dTitle"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/directions"
                    android:padding="10dp"
                    android:minLines="2"
                    android:maxLines="5" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/comments_section">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/comments"
                        android:id="@+id/textView6"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/comments_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:id="@+id/add_comment_button"
                        android:textColor="@color/accent"
                        android:padding="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_gravity="left"
                        android:layout_marginBottom="50dp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:background="@color/card_background"
        android:elevation="2dp"
        android:layout_gravity="bottom|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rides"
            android:id="@+id/rides_button"
            android:textColor="@color/primary_dark"
            android:clickable="true"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/features"
            android:id="@+id/features_button"
            android:textColor="@color/primary_dark"
            android:clickable="true"
            android:padding="12dp" />

    </LinearLayout>
</FrameLayout>