<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="12dp"
    android:transitionGroup="false"
    android:id="@+id/all"
    android:elevation="4dp">

    <!-- A CardView that contains a TextView -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/feature_photo"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="-25dp"
        android:layout_marginRight="-25dp"
        android:background="@color/card_background" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_translucent"
        android:id="@+id/titlebar"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/difficulty_icon"
            android:padding="8dp"
            android:src="@drawable/ic_easy"
            android:layout_gravity="center_vertical|left"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/menu_button"
            android:layout_gravity="right|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:visibility="invisible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/titletext"
            android:gravity="left"
            android:layout_marginLeft="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/distance"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/card"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/feature_photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/card_background">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="★★★★☆☆☆☆"
                android:id="@+id/rating"
                android:layout_gravity="left|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/trailsystem"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description of trail"
            android:id="@+id/description"
            android:minLines="1"
            android:maxLines="5"
            android:textColor="@color/primary_text" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:id="@+id/stats">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rides: 14/102"
                android:id="@+id/rides"
                android:layout_gravity="left|top"
                android:textColor="@color/secondary_text"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/edit"
                android:id="@+id/edit_button"
                android:textColor="@color/primary_dark"
                android:clickable="true"
                android:padding="12dp"
                android:layout_gravity="right"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>