<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/card_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/titlebar"
        android:layout_gravity="top|center_horizontal">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/difficulty_icon"
            android:padding="8dp"
            android:src="@drawable/ic_easy"
            android:layout_gravity="center_vertical|left"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/titletext"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="approx. 30 km away"
                android:id="@+id/distance"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/feature_photo"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:theme="@android:style/Theme.Translucent"
            android:layout_gravity="left|center_vertical"
            android:focusable="true"
            android:minWidth="150dp"
            android:layout_alignRight="@+id/ratingbar"
            android:layout_alignLeft="@+id/ratingbar" />

        <ScrollView

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/card_background"
            android:id="@+id/scrollView"
            android:fillViewport="false"
            android:layout_gravity="right|center_vertical"
            android:layout_toRightOf="@+id/feature_photo"
            android:layout_alignBottom="@+id/ratingbar">

            <!-- A CardView that contains a TextView -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/description"
                        android:id="@+id/textView7"
                        android:textColor="@color/secondary_text"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/description"
                        android:minLines="1"
                        android:maxLines="5"
                        android:textColor="@color/primary_text"
                        android:padding="10dp" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:id="@+id/stats">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Rides: 14/102"
                            android:id="@+id/rides"
                            android:layout_gravity="left|top"
                            android:textColor="@color/secondary_text"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/photos"
                        android:id="@+id/textView5"
                        android:paddingLeft="10dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:id="@+id/photo_picker"
                        android:background="@color/ratingbar_background">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/photos"
                            android:minHeight="96dp"
                            android:gravity="center_vertical|left"></LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/comments_section">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/comments"
                            android:id="@+id/textView6"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comments_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Comment"
                            android:id="@+id/add_comment_button"
                            android:textColor="@color/accent"
                            android:padding="12dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_gravity="left" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/feature_photo"
            android:padding="8dp"
            android:id="@+id/ratingbar"
            android:background="@color/ratingbar_background"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/trailsystem"
                android:layout_gravity="right|center_vertical"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/rating"
                android:id="@+id/textView4"
                android:layout_gravity="top"
                android:textColor="@color/primary_text"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="★★★★☆☆☆☆"
                android:id="@+id/rating"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:paddingTop="12dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttons"
            android:gravity="right"
            android:background="@color/card_background"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ratingbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/rides"
                android:id="@+id/rides_button"
                android:textColor="@color/primary_dark"
                android:clickable="true"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/features"
                android:id="@+id/features_button"
                android:textColor="@color/primary_dark"
                android:clickable="true"
                android:padding="12dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>